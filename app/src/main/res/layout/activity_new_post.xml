<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".posts.NewPostActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context="com.advse.universitybazaar.posts.NewPostActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="35dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/postHeadingTil"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp">

            <EditText
                android:id="@+id/postHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="149dp"
                android:ems="10"
                android:hint="Post Heading" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/postDescriptionTil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="203dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/postDescription"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_alignParentBottom="false"
                android:baselineAligned="false"
                android:ems="10"
                android:gravity="top|left"
                android:hint="Post Description"
                android:inputType="textMultiLine"
                android:lines="6" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/postLocationTil"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="320dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/postLocation"
                android:layout_width="362dp"
                android:layout_height="63dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="99dp"
                android:layout_marginStart="0dp"
                android:hint="Location" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/createPostButton"
            android:layout_width="213dp"
            android:layout_height="59dp"
            android:layout_alignEnd="@+id/postLocationTil"
            android:layout_below="@+id/postLocationTil"
            android:layout_marginEnd="131dp"
            android:layout_marginTop="95dp"
            android:text="POST" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>